            <li><a href="/contacto" class="hover:text-primary-400 transition-colors">Contacto</a></li>
        </ul>
    `;

  document.body.appendChild(navMenu);

  if (menuButton) {
    menuButton.addEventListener("click", () => {
      navMenu.classList.toggle("hidden");
    });
  }
</script>
